dicator-position=\"outside\" height=\"450px\">\r\n              <el-carousel-item v-for=\"(item, index) in swiperList\" :key=\"index\">\r\n                <div class=\"carousel-img-box\">\r\n                  <img :src=\"getImageUrl(item)\" alt=\"车辆照片\" class=\"carousel-img\">\r\n                </div>\r\n              </el-carousel-item>\r\n            </el-carousel>\r\n          </div>\r\n        </el-col>\r\n\r\n        <el-col :span=\"12\">\r\n          <div class=\"info-wrapper\">\r\n            <div class=\"info-header\">\r\n              <h1 class=\"title\">{{ detail.cheliangpinpai }} {{ detail.cheliangxinghao }}</h1>\r\n              <el-button class=\"consult-btn\" type=\"text\" icon=\"el-icon-chat-dot-round\" @click=\"chatTap\">在线咨询</el-button>\r\n            </div>\r\n\r\n            <div class=\"price-status-block\">\r\n              <div class=\"price-box\">\r\n                <span class=\"currency\">¥</span>\r\n                <span class=\"price-num\">{{ detail.qichejiage }}</span>\r\n                <span class=\"unit\">/天</span>\r\n              </div>\r\n              <div class=\"status-box\">\r\n                <el-tag :type=\"detail.zhuangtai === '可租' ? 'success' : 'danger'\" effect=\"dark\" size=\"medium\">\r\n                  {{ detail.zhuangtai || '未知状态' }}\r\n                </el-tag>\r\n              </div>\r\n            </div>\r\n\r\n            <div class=\"specs-grid\">\r\n              <div class=\"spec-item\">\r\n                <i class=\"el-icon-s-help\"></i>\r\n                <span class=\"label\">类别:</span>\r\n                <span class=\"value\">{{ detail.qicheleibie }}</span>\r\n              </div>\r\n              <div class=\"spec-item\">\r\n                <i class=\"el-icon-user\"></i>\r\n                <span class=\"label\">座位:</span>\r\n                <span class=\"value\">{{ detail.zuoweishu }}座</span>\r\n              </div>\r\n              <div class=\"spec-item\">\r\n                <i class=\"el-icon-s-operation\"></i>\r\n                <span class=\"label\">档位:</span>\r\n                <span class=\"value\">{{ detail.huandangfangshi }}</span>\r\n              </div>\r\n              <div class=\"spec-item\">\r\n                <i class=\"el-icon-truck\"></i>\r\n                <span class=\"label\">车牌:</span>\r\n                <span class=\"value\">{{ detail.chepaihao }}</span>\r\n              </div>\r\n              <div class=\"spec-item full-width\">\r\n                <i class=\"el-icon-location-information\"></i>\r\n                <span class=\"label\">取车地点:</span>\r\n                <span class=\"value\">{{ detail.quchedidian }}</span>\r\n              </div>\r\n            </div>\r\n\r\n            <el-divider></el-divider>\r\n\r\n            <div class=\"brief-introduction\">\r\n              <p>{{ detail.qichejianjie || '暂无主要简介...' }}</p>\r\n            </div>\r\n\r\n            <div class=\"action-block\">\r\n              <el-button\r\n                  type=\"primary\"\r\n                  size=\"large\"\r\n                  class=\"rent-btn\"\r\n                  :disabled=\"detail.zhuangtai !== '可租'\"\r\n                  @click=\"onTheNode(detail.id)\"\r\n              >\r\n                {{ detail.zhuangtai === '可租' ? '立即预定' : '暂时无法预定' }}\r\n              </el-button>\r\n            </div>\r\n          </div>\r\n        </el-col>\r\n      </el-row>\r\n    </div>\r\n\r\n    <div class=\"tabs-content-box\">\r\n      <el-tabs type=\"border-card\" v-model=\"activeTab\">\r\n        <el-tab-pane label=\"车辆详情\" name=\"details\">\r\n          <div class=\"rich-text-content\" v-html=\"detail.qichexiangqing\"></div>\r\n        </el-tab-pane>\r\n\r\n        <el-tab-pane label=\"用户评价\" name=\"comments\" lazy>\r\n          <div class=\"comments-section\">\r\n            <div class=\"comment-input-box\">\r\n              <el-input\r\n                  type=\"textarea\"\r\n                  :rows=\"3\"\r\n                  placeholder=\"分享您的用车体验...\"\r\n                  v-model=\"form.content\"\r\n                  maxlength=\"200\"\r\n                  show-word-limit\r\n              ></el-input>\r\n              <div class=\"submit-btn-box\">\r\n                <el-button type=\"primary\" size=\"medium\" @click=\"submitForm\">发表评论</el-button>\r\n              </div>\r\n            </div>\r\n\r\n            <el-divider content-position=\"left\">最新评论</el-divider>\r\n\r\n            <div class=\"comment-list\">\r\n              <div v-for=\"(item, index) in comments\" :key=\"index\" class=\"comment-item\">\r\n                <div class=\"user-avatar\">\r\n                  <el-avatar icon=\"el-icon-user-solid\" :size=\"40\"></el-avatar>\r\n                </div>\r\n                <div class=\"comment-body\">\r\n                  <div class=\"comment-header\">\r\n                    <span class=\"username\">用户{{ item.userid ? item.userid.toString().substring(0, 6) : '匿名' }}</span>\r\n                    <span class=\"time\">{{ item.addtime }}</span>\r\n                  </div>\r\n                  <p class=\"comment-text\">{{ item.content }}</p>\r\n                </div>\r\n              </div>\r\n              <el-empty v-if=\"comments.length === 0\" description=\"暂无评论，快来抢沙发吧！\"></el-empty>\r\n            </div>\r\n\r\n            <div class=\"pagination-box\" v-if=\"comments.length > 0\">\r\n              <el-pagination\r\n                  background\r\n                  layout=\"prev, pager, next\"\r\n                  :page-size=\"pageSize\"\r\n                  :total=\"total\"\r\n                  @current-change=\"curChange\"\r\n              ></el-pagination>\r\n            </div>\r\n          </div>\r\n        </el-tab-pane>\r\n      </el-tabs>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      swiperList: [],\r\n      baseUrl: this.$config.baseUrl,\r\n      detail: {},\r\n      activeTab: 'details', // 默认激活的 tab\r\n      // 评论相关\r\n      form: { content: '', userid: localStorage.getItem('userid'), refid: this.$route.query.id },\r\n      comments: [],\r\n      total: 0,\r\n      pageSize: 10,\r\n    };\r\n  },\r\n  created() {\r\n    this.init();\r\n    this.getComments(1);\r\n  },\r\n  methods: {\r\n    init() {\r\n      this.$http.get(`qichexinxi/detail/${this.$route.query.id}`, {}).then(res => {\r\n        if (res.data.code == 0) {\r\n          this.detail = res.data.data;\r\n          if (res.data.data.cheliangzhaopian) {\r\n            this.swiperList = res.data.data.cheliangzhaopian.split(',');\r\n          }\r\n        }\r\n      });\r\n    },\r\n    // 【修复】稳健的获取图片URL方法\r\n    getImageUrl(path) {\r\n      if (!path) return require('@/assets/logo.png'); // 替换为你的默认占位图\r\n      // 如果数据库存的是完整http路径则直接用，否则拼接baseUrl\r\n      return path.startsWith('http') ? path : this.baseUrl + path;\r\n    },\r\n    onTheNode(id) {\r\n      if (localStorage.getItem('Token')) {\r\n        this.$router.push({ path: '/index/zuchedingdanAdd', query: { id: id } });\r\n      } else {\r\n        this.$message.warning('请先登录后再预定');\r\n        this.$router.push('/login');\r\n      }\r\n    },\r\n    chatTap() {\r\n      this.$router.push({ path: '/index/messages' });\r\n    },\r\n    // 获取评论\r\n    getComments(page) {\r\n      this.$http.get(`discussqichexinxi/list`, {\r\n        params: { page, limit: this.pageSize, refid: this.$route.query.id }\r\n      }).then(res => {\r\n        if (res.data.code == 0) {\r\n          this.comments = res.data.data.list;\r\n          this.total = res.data.data.total;\r\n        }\r\n      });\r\n    },\r\n    curChange(page) {\r\n      this.getComments(page);\r\n    },\r\n    // 提交评论\r\n    submitForm() {\r\n      if (!localStorage.getItem('Token')) {\r\n        this.$message.warning('请先登录');\r\n        this.$router.push('/login');\r\n        return;\r\n      }\r\n      if (!this.form.content) {\r\n        this.$message.error('请输入评论内容');\r\n        return;\r\n      }\r\n      this.$http.post(`discussqichexinxi/add`, this.form).then(res => {\r\n        if (res.data.code == 0) {\r\n          this.$message.success('评论发表成功');\r\n          this.form.content = '';\r\n          this.getComments(1);\r\n        }\r\n      });\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n// 变量定义\r\n$--color-primary: #00c292; // 主色调\r\n$--color-danger: #f56c6c;\r\n$--text-main: #303133;\r\n$--text-regular: #606266;\r\n$--text-secondary: #909399;\r\n$--border-color-base: #dcdfe6;\r\n\r\n.detail-page-container {\r\n  width: 1200px;\r\n  margin: 20px auto;\r\n  font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif;\r\n}\r\n\r\n.breadcrumb-box {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.main-content-box {\r\n  background: #fff;\r\n  padding: 30px;\r\n  border-radius: 8px;\r\n  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);\r\n  margin-bottom: 30px;\r\n}\r\n\r\n/* 左侧图集样式 */\r\n.gallery-wrapper {\r\n  .carousel-img-box {\r\n    width: 100%;\r\n    height: 450px;\r\n    background: #f5f7fa;\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    border-radius: 4px;\r\n    overflow: hidden;\r\n\r\n    .carousel-img {\r\n      width: 100%;\r\n      height: 100%;\r\n      object-fit: cover; // 关键：保持比例填充\r\n    }\r\n  }\r\n\r\n  /deep/ .el-carousel__indicators--outside {\r\n    margin-top: 10px;\r\n  }\r\n}\r\n\r\n/* 右侧信息区样式 */\r\n.info-wrapper {\r\n  padding-left: 20px;\r\n  height: 450px;\r\n  display: flex;\r\n  flex-direction: column;\r\n\r\n  .info-header {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: flex-start;\r\n    margin-bottom: 15px;\r\n\r\n    .title {\r\n      margin: 0;\r\n      font-size: 28px;\r\n      color: $--text-main;\r\n      font-weight: 600;\r\n      line-height: 1.3;\r\n    }\r\n    .consult-btn {\r\n      color: $--color-primary;\r\n      font-size: 16px;\r\n      padding-top: 5px;\r\n      &:hover { text-decoration: underline; }\r\n    }\r\n  }\r\n\r\n  .price-status-block {\r\n    background: #f9fafc;\r\n    padding: 20px;\r\n    border-radius: 6px;\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n    margin-bottom: 25px;\r\n\r\n    .price-box {\r\n      color: $--color-danger;\r\n      .currency { font-size: 20px; font-weight: bold; }\r\n      .price-num { font-size: 36px; font-weight: bold; line-height: 1; margin: 0 4px; }\r\n      .unit { font-size: 14px; color: $--text-secondary; }\r\n    }\r\n  }\r\n\r\n  .specs-grid {\r\n    display: flex;\r\n    flex-wrap: wrap;\r\n    gap: 20px 30px;\r\n    margin-bottom: 20px;\r\n    flex-grow: 1; // 让它占据中间空间\r\n\r\n    .spec-item {\r\n      width: calc(50% - 15px); // 两列布局\r\n      display: flex;\r\n      align-items: center;\r\n      font-size: 15px;\r\n\r\n      i {\r\n        color: $--color-primary;\r\n        font-size: 18px;\r\n        margin-right: 10px;\r\n      }\r\n      .label { color: $--text-secondary; margin-right: 8px; }\r\n      .value { color: $--text-main; font-weight: 500; }\r\n\r\n      &.full-width {\r\n        width: 100%;\r\n      }\r\n    }\r\n  }\r\n\r\n  .brief-introduction {\r\n    color: $--text-regular;\r\n    font-size: 14px;\r\n    line-height: 1.6;\r\n    margin-bottom: 25px;\r\n    display: -webkit-box;\r\n    -webkit-box-orient: vertical;\r\n    -webkit-line-clamp: 2; // 只显示两行简介\r\n    overflow: hidden;\r\n  }\r\n\r\n  .action-block {\r\n    .rent-btn {\r\n      width: 100%;\r\n      height: 50px;\r\n      font-size: 18px;\r\n      font-weight: bold;\r\n      background-color: $--color-primary;\r\n      border-color: $--color-primary;\r\n      box-shadow: 0 4px 12px rgba($--color-primary, 0.3);\r\n      transition: all 0.3s;\r\n\r\n      &:hover {\r\n        background-color: lighten($--color-primary, 5%);\r\n        border-color: lighten($--color-primary, 5%);\r\n        transform: translateY(-2px);\r\n      }\r\n\r\n      &.is-disabled {\r\n        background-color: #a0cfff; // 禁用色\r\n        border-color: #a0cfff;\r\n        box-shadow: none;\r\n      }\r\n    }\r\n  }\r\n}\r\n\r\n/* Tabs 样式 */\r\n.tabs-content-box {\r\n  background: #fff;\r\n  border-radius: 8px;\r\n  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);\r\n  overflow: hidden; // for border-radius\r\n\r\n  /deep/ .el-tabs__header {\r\n    background: #f5f7fa;\r\n    margin-bottom: 0;\r\n  }\r\n  /deep/ .el-tabs__content {\r\n    padding: 30px;\r\n  }\r\n\r\n  .rich-text-content {\r\n    line-height: 1.8;\r\n    color: $--text-regular;\r\n    // 防止富文本图片溢出\r\n    /deep/ img { max-width: 100%; height: auto; }\r\n  }\r\n}\r\n\r\n/* 评论区样式 */\r\n.comments-section {\r\n  .comment-input-box {\r\n    margin-bottom: 40px;\r\n    .submit-btn-box {\r\n      margin-top: 15px;\r\n      text-align: right;\r\n    }\r\n  }\r\n\r\n  .comment-list {\r\n    .comment-item {\r\n      display: flex;\r\n      padding: 20px 0;\r\n      border-bottom: 1px solid $--border-color-base;\r\n\r\n      &:last-child { border-bottom: none; }\r\n\r\n      .user-avatar {\r\n        margin-right: 20px;\r\n      }\r\n\r\n      .comment-body {\r\n        flex: 1;\r\n        .comment-header {\r\n          margin-bottom: 10px;\r\n          display: flex;\r\n          justify-content: space-between;\r\n          .username { font-weight: bold; color: $--text-main; }\r\n          .time { color: $--text-secondary; font-size: 13px; }\r\n        }\r\n        .comment-text {\r\n          color: $--text-regular;\r\n          line-height: 1.6;\r\n          font-size: 15px;\r\n        }\r\n      }\r\n    }\r\n  }\r\n  .pagination-box {\r\n    text-align: center;\r\n    margin-top: 30px;\r\n  }\r\n}\r\n</style>\r\n"]}]}